<!DOCTYPE html>
<html>
<head>
    <title>The World - @ViewBag.Title</title>
    <meta charset="utf-8" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body>

    <div id="sidebar">
        <img src="~/img/owasp.png" alt="TheWorld" class="headshot" />
        <span id="username">Sam Paul!</span>
        <ul class="menu">
            <li class="active"><a asp-controller="App" asp-action="Index">Home</a></li>
            <li><a asp-controller="App" asp-action="About">About</a></li>
            <li><a asp-controller="App" asp-action="Contact">Contact</a></li>
        </ul>
    </div>

    <div id="wrapper">
        <div id="main">
            <button id="sidebarToggle">Toggle Menu</button>
        </div>
        @RenderBody()
    </div>

    <div id="footer">
        &copy; 2016 Lynch Ltd.
    </div>
    <script type="text/javascript" src="~/lib/jquery-validation/src/additional/lettersonly.js"></script>
    <script type="text/javascript" src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/js/site.js"></script>
    @RenderSection("scripts", false)


</body>

</html>
